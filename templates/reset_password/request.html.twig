{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="flex items-center justify-center h-screen bg-gray-100">
        <div class="bg-white shadow-lg rounded-lg p-6 w-full max-w-md">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                {{ flash_error }}
            </div>
        {% endfor %}
            <h1 class="text-2xl font-semibold mb-4">Réinitialisez votre mot de passe</h1>

            {{ form_start(requestForm, {'attr': {'class': 'space-y-4'}}) }}
                <div>
                    {{ form_label(requestForm.email) }}
                    {{ form_widget(requestForm.email, {'attr': {'class': 'form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
                </div>
                <div class="text-sm text-gray-600">
                    <small>
                        Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                    </small>
                </div>

                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-500 hover:bg-blue-700 focus:outline-none focus:border-blue-700 focus:ring-blue active:bg-blue-700 transition duration-150 ease-in-out">
                    Envoyer l'email de réinitialisation
                </button>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
