{% extends 'base.html.twig' %}

{% block title %}Snowtricks - Inscription{% endblock %}

{% block body %}
    <div class="container mx-auto flex items-center justify-center" style="height: 85vh">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4" role="alert">
                {{ flash_error }}
            </div>
        {% endfor %}
        <div class="bg-white shadow-lg rounded-lg p-6 w-full max-w-md">
            <form method="post" class="space-y-6">
                <h1 class="text-2xl font-semibold mb-4">Inscription</h1>
                {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}

                <div>
                    {{ form_row(registrationForm.username, {
                        label: 'Nom d\'utilisateur',
                        attr: {'class': 'form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}
                    }) }}
                </div>

                <div>
                    {{ form_row(registrationForm.email, {
                        label: 'Adresse email',
                        attr: {'class': 'form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}
                    }) }}
                </div>

                <div>
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe',
                        attr: {'class': 'form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}
                    }) }}
                </div>

                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-500 hover:bg-blue-700 focus:outline-none focus:border-blue-700 focus:ring-blue active:bg-blue-700 transition duration-150 ease-in-out">
                    Cr√©er mon compte
                </button>

                {{ form_end(registrationForm) }}
            </form>
        </div>
    </div>
<style>
	{
		# for each input add border #
	}
	.form-input {
		border: 1px solid #d2d6dc;
	}
	{
		# for each input add border #
	}
</style>

{% endblock %}
