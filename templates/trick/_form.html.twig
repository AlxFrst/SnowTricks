{{ form_start(form) }}
    {{ form_widget(form._token) }}
    {{ form_errors(form) }}
    {{ form_row(form.name) }}
{{ form_label(form.category) }}

    {{ form_widget(form.category,  {'attr': {'class': 'flex flex-wrap'}}) }}
{{ form_row(form.description) }}
<button type="button" class="bg-blue-500 hover:bg-blue-700 text-white font-bold rounded py-2 px-4 m-2" id="add_picture" data-collection="#pictures">Ajouter une Photo
</button>
<div
        id="pictures"
        class="flex flex-wrap py-2 justify-center"
        data-prototype="{{ include(
            'trick/_picture_form.html.twig',
            {form: form.pictures.vars.prototype})|e("html_attr") }}"
        data-index="{{ form.pictures|length > 0 ? form.pictures|last.vars.name + 1 : 0 }}">

    {% for picture in form.pictures %}
        <div class="w-1/3 p-1">
            {{ include('trick/_picture_form.html.twig', {form: picture}) }}
        </div>
    {% endfor %}
</div>


<button type="button" class="bg-blue-500 hover:bg-blue-700 text-white font-bold rounded py-2 px-4 m-2 mt-auto" id="add_video" data-collection="#videos">Ajouter une Vid√©o
</button>
<div
        id="videos"
        class="flex flex-wrap py-2"
        data-prototype="{{ include(
            'trick/_video_form.html.twig',
            {form: form.video.vars.prototype})|e("html_attr") }}"
        data-index="{{ form.video|length > 0 ? form.video|last.vars.name + 1 : 0 }}">

    {% for video in form.video %}
        <div class="w-1/3 p-1">
            {{ include('trick/_video_form.html.twig', {form: video}) }}
        </div>
    {% endfor %}
</div>
<button class="bg-green-500 hover:bg-green-700 text-white font-bold rounded py-2 px-4 m-2 mt-auto">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form, {render_rest: false}) }}
