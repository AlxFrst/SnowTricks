{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Ajouter une catégorie{% endblock %}

{% block body %}
<div class="flex justify-center items-center min-h-screen bg-gray-100">
    <div class="w-full max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-md">
        <h1 class="text-2xl font-semibold text-gray-800 mb-4">Ajouter une catégorie</h1>
        <div class="mt-4">
            {{ form(form, {'attr': {'class': 'space-y-4'}}) }}
        </div>
        <!-- bouton retour avec style amélioré -->
        <div class="mt-6">
            <a href="{{ path('app_trick_index') }}" class="inline-block px-6 py-2 border border-gray-300 text-gray-800 font-medium text-xs leading-tight uppercase rounded hover:bg-black hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out">Retour au tableau de bord</a>
        </div>
    </div>
</div>
{% endblock %}
