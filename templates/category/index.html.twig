{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <div class="flex justify-center mt-10">
        <div class="w-full max-w-2xl p-6 bg-white rounded-lg shadow-md">
            <div class="flex justify-between items-center">
                <h1 class="text-2xl font-semibold text-gray-800">Catégories</h1>
                <a href="{{ path('app_category_add') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Ajouter une catégorie
                </a>
            </div>

            {% if categories is empty %}
                <p class="text-gray-600 mt-4">Aucune catégorie trouvée.</p>
            {% else %}
                <table class="min-w-full leading-normal mt-6">
                    <thead>
                        <tr>
                            <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                Nom
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for category in categories %}
                            <tr>
                                <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                                    <p class="text-gray-900 whitespace-no-wrap">{{ category.name }}</p>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
{% endblock %}
